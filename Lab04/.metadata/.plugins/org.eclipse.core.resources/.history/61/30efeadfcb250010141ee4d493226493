package hust.soict.hedspi.aims.screen.manager;

import hust.soict.hedspi.aims.media.Media;
import hust.soict.hedspi.aims.media.Playable;

import javax.swing.*;
import java.awt.*;

public class MediaStore extends JPanel {
    private Media media;

    public MediaStore(Media media) {
        this.media = media;

        // Set layout và viền
        this.setLayout(new BoxLayout(this, BoxLayout.Y_AXIS));
        this.setBorder(BorderFactory.createLineBorder(Color.BLACK));

        // Tên media
        JLabel title = new JLabel(media.getTitle());
        title.setFont(new Font(title.getFont().getName(), Font.BOLD, 16));
        title.setAlignmentX(CENTER_ALIGNMENT);

        // Thể loại
        JLabel category = new JLabel("Category: " + media.getCategory());
        category.setAlignmentX(CENTER_ALIGNMENT);

        // Giá
        JLabel cost = new JLabel(String.format("Cost: %.2f $", media.getCost()));
        cost.setAlignmentX(CENTER_ALIGNMENT);

        this.add(Box.createVerticalGlue());
        this.add(title);
        this.add(category);
        this.add(cost);

        // Nếu media có thể play, thêm nút "Play"
        if (media instanceof Playable) {
            JButton playButton = new JButton("Play");
            playButton.setAlignmentX(CENTER_ALIGNMENT);

            playButton.addActionListener(e -> {
                // Hiển thị hộp thoại phát media
                JOptionPane.showMessageDialog(this,
                        "Playing: " + media.getTitle(),
                        "Play Media",
                        JOptionPane.INFORMATION_MESSAGE);
                ((Playable) media).play();
            });

            this.add(playButton);
        }

        this.add(Box.createVerticalGlue());
    }
}
